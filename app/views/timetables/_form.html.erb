  <div class="field">      
      <%= f.time_select :start_time, :label => "Select Time You Open (24 Hour Format)" %>        
  </div>

  <div class="field">      
      <%= f.time_select :end_time, :label => "Select Time You Close (24 Hour Format)" %>
  </div>

  <div class="actions">
    <%= f.submit "SUBMIT", class: "btn btn-danger"  %>
  </div>
<% end %>
