<div class="parent" >
 
  <div class="center-column" id ="whitebackground">   
    <h1 style ="margin: 10px auto; color: #ffc000"><%= @listing.title.to_s.upcase %> </h1>     
 <div id = "listingsdesc">
 
    <p>       
      <% if @listing.image_url.present? %> 
        <%= image_tag @listing.image.to_s if @listing.image_url.present? %>
      <% else %>
        <%= image_tag("https://s3-us-west-2.amazonaws.com/wacbacassetsdonttouch/wacbacassets/nopictures.png", :alt => "want a car buy a car") %>
      <% end %>
        
    </p>
  </div>

    
    
  </div>

<div class="center-column" id ="whitebackground">
  <h1 style ="margin: 10px auto; color: #ffc000">DESCRIPTION</h1> 
     <h2>
      <%=  @listing.description.to_s.upcase %>
      </h2>

<style type="text/css">
.tg  {border-collapse:collapse;border-spacing:0; text-align: right;}
.tg td{font-family:Arial, sans-serif;font-size:14px;  text-align:center; padding:2px 2px; border-width:1px;overflow:hidden;word-break:normal;}
.tg th{font-family:Arial, sans-serif;font-size:14px;text-align:center;  font-weight:normal;padding:2px 2px;border-width:1px;overflow:hidden;word-break:normal;}
.tg .tg-yw4l{vertical-align:top}
</style>


<table class="tg">
  <tr>
    <th class="tg-yw4l">Year:</th>
    <th class="tg-yw4l"><%= " #{@listing.year}" %></th>
  </tr>
  <tr>
    <td class="tg-yw4l">Miles:</td>
    <td class="tg-yw4l"><%= "#{@listing.miles}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Transmission:</td>
    <td class="tg-yw4l"><%= "#{@listing.transmission}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Color:</td>
    <td class="tg-yw4l"><%= "#{@listing.color}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Cylinder:</td>
    <td class="tg-yw4l"><%= "#{@listing.cylinder}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Fuel Type:</td>
    <td class="tg-yw4l"><%=  "#{@listing.fuel}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Drive:</td>
    <td class="tg-yw4l"><%=  "#{@listing.drive}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Estimated Price $:</td>
    <td class="tg-yw4l"><%= "#{ @listing.price}" %> </td>
  </tr>
  <tr>
    <td class="tg-yw4l">New Or Used:</td>
    <td class="tg-yw4l"><%= "#{ @listing.newused}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Stock Number:</td>
    <td class="tg-yw4l"><%= "#{ @listing.stocknumber}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Model:</td>
    <td class="tg-yw4l"><%= "#{ @listing.model}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Trim:</td>
    <td class="tg-yw4l"><%= "#{ @listing.trim}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">VIN:</td>
    <td class="tg-yw4l"><%= "#{ @listing.vin}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Enginer Description:</td>
    <td class="tg-yw4l"><%= "#{ @listing.enginedescription}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Interior Color:</td>
    <td class="tg-yw4l"><%= "#{ @listing.interiorcolor}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Options:</td>
    <td class="tg-yw4l"><%= "#{ @listing.options}" %></td>
  </tr>
  <tr>
    <td class="tg-yw4l">Car Location:</td>
    <td class="tg-yw4l"><%= "#{ @listing.full_address}" %></td>
  </tr>
</table>


       <% if @listing.user.eql? current_user %>
        <p><%= link_to 'edit', edit_listing_path %></p>
        <p><%= link_to 'delete', @listing, data: {confirm: "Wait! Are you sure ?"}, method: :delete %></p>
      <% end %>
  </div>


<div class="center-column" id="right-center-column2" >
       
      
      <% if @listings.present? %>
          <h1>OTHER LISTINGS BY SAME USER</h1>
          <% @listings.each do |mylisting| %>                      
              <% if  mylisting.id != @listing.id %>
                <div id = "listingsdescsmall">                
                  <%= link_to mylisting do %>
                      <p style="font-size: 30px; margin-top: -10px;">
                          
                          <% if mylisting.image_url.present? %> 
                            <%= image_tag mylisting.image.to_s if mylisting.image_url.present? %> 
                          <% else %>
                            <%= image_tag("nopictures.png", :alt => "want a car buy a car") %>
                          <% end %>
                        
                          
                            <%= mylisting.title %> - (<%= mylisting.city %>, <%= mylisting.state %>, Price $: <%= mylisting.price %>)                                   
                      </p>
                  <% end %>
                </div>
              <% end %>      
          <% end %>
      <% end %>
  
</div>

<div class="center-column" id="right-center-column2" >
     <!-- <button type="button">reply</button> -->
     <h1>USER INFO</h1>     
     <br>      
     <% if @listing.user != nil %>  
       <% if @listing.user.email != nil %>  
        <p style="font-size: 30px; margin-top: -10px;"><%= "Contact Person:  #{@listing.user.email}" %></p>
        <% end %>

        <% if @listing.user.role != nil %>
          <p style="font-size: 30px; margin-top: -10px;"><%= "User Type:  #{@listing.user.role}" %></p>
          <% else %>
          <p style="font-size: 30px; margin-top: -10px;">User Type: Private Owner</p>
        <% end %>


          <% if @listing.user.website != nil %>               
            <p style="font-size: 30px; margin-top: -10px;"><a href = <%= "http://#{@listing.user.website}" %> > Visit Their Website</a></p>        
          <% end %>
      <% end %>

      <p style="font-size: 30px; margin-top: -10px;">posted <%=  "#{time_ago_in_words(@listing.created_at)} ago" %></p>    
      <p style="font-size: 30px; margin-top: -10px;">updated <%=  "#{time_ago_in_words(@listing.updated_at)} ago" %></p>        
    
</div>


</div>

