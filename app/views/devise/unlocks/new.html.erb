	    <%= f.submit "Resend unlock instructions", class: "btn btn-danger" %>	  
	<% end %>

	<%= render "devise/shared/links" %>

  <div class = "col-sm-3 col-md-3 col-lg-3">
  </div>
    

</div>

</div>
