<div class = "col-sm-12 col-md-12 col-lg-12" style = "background-color: #fff; min-height: 700px;">

  <div class = "col-sm-3 col-md-3 col-lg-3">
  </div>
    

  <div class = "col-sm-6 col-md-6 col-lg-6" style = "text-align: center; ">
    <strong><h1 style = "font-size: 110px; color: #7C064D; margin-bottom: 20px; ">LOG IN</h1></strong>
    <hr>

    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>          
          <%= f.email_field :email, autofocus: true, :label => "YOUR EMAIL" %>   
          
          <%= f.password_field :password, autocomplete: "on", :label => "YOUR PASSWORD" %>
        

        <% if devise_mapping.rememberable? -%>    
            <%= f.check_box :remember_me %>            
        <% end -%>

        <div class="signin-button">
          <%= f.submit "Log in", class: "btn btn-danger" %>
        </div>

    <% end %>

  <div class="signin-button">

      <p>
        <%= render "devise/shared/links" %>
      </p>

      
  </div>


  <div class = "col-sm-3 col-md-3 col-lg-3">
  </div>
    

</div>

</div>
