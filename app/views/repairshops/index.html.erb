<%= render 'repairshops/searchshops'%>    
<% if user_signed_in? %>
  <% if (current_user.role.eql? "premium") or (current_user.role.eql? "repairshop") %>  
    <h1 style ="text-align: center; text-decoration: none; font-size: 20px;">
      <%= link_to 'ADD YOUR REPAIR SHOP FOR FREE', new_repairshop_path %>
    </h1>  

    <h1 style ="text-align: center; font-size: 20px; margin-top: 20px;">
      OR
    </h1>  
  <% end %>
<% end %>

<% if @repairshops.present? %>    
  <div class="center-column" id="right-center-column2" >
    <h1>VIEW ALL REPAIR SHOPS</h1>
          
        <% @repairshops.each do |wlisting| %>              
          <div id = "listingsdescsmall">                
            <%= link_to wlisting do %>
              <p style="font-size: 30px; margin-top: -10px;">
                <% if wlisting.image_url.present? %> 
                    <%= image_tag wlisting.image.to_s if wlisting.image_url.present? %> 
                <% else %>
                    <%= image_tag("https://s3-us-west-2.amazonaws.com/wacbacassetsdonttouch/wacbacassets/repairbig.png") %>
                <% end %>                            
                  <%= wlisting.title %> - (<%= wlisting.city %>, <%= wlisting.state %>, Phone: <%= wlisting.phone %>)                                   
              </p>
            <% end %>
          </div>                   
        <% end %>    
  </div>    
<% end %>


<div class="parent">
  <div class="center-column" id="right-center-column-full2" >
  <%= render "repairshops/repairshopmap"%>
  </div>
</div>

