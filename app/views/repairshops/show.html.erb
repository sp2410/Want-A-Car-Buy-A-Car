<%= content_for(:meta_og) do %>
    <meta property="og:title" content="<%= @repairshop.title %>" />
    <meta property="og:type" content="Page" />        
    <meta property="og:description" content="<%= @repairshop.description %>" />
    <meta property="og:url" content="<%= repairshop_path(@repairshop) %> />
    <% if @repairshop.image %>
        <%= tag :meta, property: 'og:image', content: "http://#{request.host}#{ @repairshop.image.url}" %>
    <% end %>
<% end %>


  <% if @user.role ==  "BASIC REPAIRSHOP" %>
    <%= render 'repairshops/basic_repairshop'%>
  <% elsif @user.role ==  "SILVER REPAIRSHOP" %>
    <%= render 'repairshops/silver_repairshop'%>
  <% elsif @user.role ==  "SILVER DEALER" %>
    <%= render 'repairshops/silver_dealer'%>  
  <% elsif @user.role ==  "DIAMOND DEALER" %>
    <%= render 'repairshops/diamond_dealer'%>
  <% else %>
    <%= render 'repairshops/basic_repairshop'%>
  <% end %>