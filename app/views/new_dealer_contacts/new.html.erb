            <h2><strong>To get started, call (866) 338-7870 or fill out the form below</strong></h2>
          </div>
          <div class = "col-sm-12 col-md-12 col-lg-12" style = "background-color: white; color:black;">
    			 <%= render 'new_dealer_contacts/form' %>
          </div>
  		</div>  	

      <div class = "col-sm-12 col-md-12 col-lg-12 col-xs-12 text-center" style = "background-color: #51BCFF; color:white; padding: 0px; margin: 1em 0em;">
          <h2><strong>Try Our Add On Services And Increase Your Sales Today</strong></h2>
          
           <%= render 'pages/features'%> 
      </div>  	

  </div>


</div>



</div>

<script>
$(document).ready(function(){
  $('#hideshow').on('click', function(event){
    $('.togglediv').toggle('show');

     $('html,body').animate({scrollTop: $(".togglediv").offset().top},'slow');
  });

  $('#hideshow2').on('click', function(event){
    $('.togglediv2').toggle('show');    
  });

  $('.togglediv').toggle('hide');
  $('.togglediv2').toggle('hide');
  

});
</script>